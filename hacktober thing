print("Title of program: Encouragement bot")
print()
while True:
  description = input("Do you feel sad, happy, tired, bored or angry?")

  list_of_words = description.split()

  feelings_list = []
  encouragement_list = []
  counter = 0
  
  for each_word in list_of_words:
    
    if each_word == "sad":
      feelings_list.append("sad")
      encouragement_list.append("it will only get better, not worse. stay positive and never give up!")
      counter += 1
    if each_word == "happy":
      feelings_list.append("happy")
      encouragement_list.append("to stay cheerful and bubbly!")
      counter += 1
    if each_word == "tired":
      feelings_list.append("tired")
      encouragement_list.append("sleep is important, do ensure that you have sufficient sleep each day so you are well-energised to enjoy and live life to the fullest!")
      counter += 1
    if each_word == "bored":
      feelings_list.append("bored")
      encouragement_list.append("to go outside for a while")
      counter += 1
    if each_word == "angry":
      feelings_list.append("angry")
      encouragement_list.append("to sleep it off, or just forgive and forget")
      counter += 1

  if counter == 0:
    
      output = "Sorry I don't really understand."

  elif counter == 1:
    
      output = "It seems that you are feeling quite " + feelings_list[0] + ". However, do remember "+ encouragement_list[0] + "! Hope you feel better :)"  

  else:

    feelings = ""    
    for i in range(len(feelings_list)-1):
      feelings += feelings_list[i] + ", "
    feelings += "and " + feelings_list[-1]
    
    encouragement = ""    
    for j in range(len(encouragement_list)-1):
      encouragement += encouragement_list[i] + ", "
    encouragement += "and " + encouragement_list[-1]

    output = "It seems that you are feeling quite " + feelings + ". Please always remember "+ encouragement + "! Hope you feel better :)"

  print()
  print(output)
  print()
